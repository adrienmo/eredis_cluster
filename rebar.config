{erl_opts, [{platform_define, "^17\.", 'ERLANG_OTP_VERSION_17'},
            warnings_as_errors,
            warn_export_all]}.

{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.

{edoc_opts, [{doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}]}.

{deps, [{eredis, "1.1.0"}, {poolboy, "1.5.1"}]}.
